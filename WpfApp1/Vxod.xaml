      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Vxod">

    <Grid>
        <Label  Content="Введите логин" FontSize="25" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top"></Label>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Center"  Margin="0,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Height="30"></TextBox>
        <Label Content="Введите пароль" FontSize="20" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="170"></Label>
        <PasswordBox x:Name="PassBox" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="160"></PasswordBox>
        <Button Content="Просмотреть туры" Margin="400,260,210,116" Click="Button_Click" HorizontalAlignment="Center"  VerticalAlignment="Top"></Button>
        <Button Content="Войти" Margin="200,260,420,116" Click="Button_Click_1" HorizontalAlignment="Center"  VerticalAlignment="Top"></Button>
    </Grid>
</Page>
